<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="MainGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#1a1a2e" />
        <GradientStop Offset="0.2999" Color="#1a1a2e" />
        <GradientStop Offset="0.3" Color="#16213e" />
        <GradientStop Offset="0.3999" Color="#16213e" />
        <GradientStop Offset="0.4" Color="#0f3460" />
        <GradientStop Offset="1" Color="#0f3460" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ColorContent" Color="White" />

    <SolidColorBrush x:Key="LightBackground" Color="#0f3460" />
    <SolidColorBrush x:Key="HardBackground" Color="#16213e" />

    <SolidColorBrush x:Key="Card" Color="#16213e" />
    <SolidColorBrush x:Key="Button" Color="#16213e" />

    <SolidColorBrush x:Key="AuthenticationColor" Color="#0f3460" />
</ResourceDictionary>